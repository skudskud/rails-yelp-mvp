<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<div class="reviews">
  <% @restaurant.reviews.each do |review| %>
    <div>
      <%= review.content %>
      <%= review.rating %>
    </div>
  <% end %>

</div>

<%= link_to 'Back', restaurants_path %> <br>
<%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>
